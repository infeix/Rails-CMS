%h1 Listing html_parts

%table
  %thead
    %tr
      %th Index
      %th Text
      %th Is last
      %th
      %th
      %th

  %tbody
    - @html_parts.each do |html_part|
      %tr
        %td= html_part.index
        %td= html_part.text
        %td= html_part.is_last
        %td= link_to 'Show', html_part
        %td= link_to 'Edit', edit_html_part_path(html_part)
        %td= link_to 'Destroy', html_part, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Html part', new_html_part_path
