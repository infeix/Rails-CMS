= form_for [@js_file] do |f|
  - if @js_file.errors.any?
    #error_explanation
      %h2= "#{pluralize(@js_file.errors.count, "error")} prohibited this js_file from being saved:"
      %ul
        - @js_file.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :position
    = Position.render_dropdown("js_file", "position", f.object.position)
  .field
    = f.label :template_element_id
    = TemplateElement.render_dropdown("js_file", "template_element_id", f.object.template_element&.title)
  .field
    = f.label :page_id
    - Page.all.each do |page|
      %br
      = "#{page.title} (#{page.id})"
      - if f.object.page_ids.include? page.id
        = check_box "js_file", "page_ids", { multiple: true, checked: true }, page.id, nil
      - else
        = check_box "js_file", "page_ids", { multiple: true, checked: false }, page.id, nil
  .field
    = f.label :index
    = f.text_field :index
  .field
    = f.label :text
    = f.text_area :text, rows: 5, cols: 100, class: "edit_template"
  .field
    = f.label :data_text
    = f.text_area :data_text, rows: 5, cols: 100, class: "edit_template"
  .field
    = f.label :js_file
    = f.file_field :js_file

    - if @css_file.js_file?
      = @css_file.js_file.url

      = label_tag :remove_js_file do
        Remove Js File
        = f.check_box :remove_js_file

  .actions
    = f.submit 'Save'
