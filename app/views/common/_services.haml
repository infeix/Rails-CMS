- services = local_assigns.fetch(:services)
- invoice = local_assigns.fetch(:invoice)

%h1 Listing services

%table
  %thead
    %tr
      %th Amount
      %th Unit
      %th Description
      %th Price per unit
      %th
      %th
      %th

  %tbody
    - services.each do |service|
      %tr
        %td= service.amount
        %td= service.unit
        %td= service.description
        %td= service.price_per_unit
        %td= link_to 'Show', invoice_service_path(invoice, service)
        %td= link_to 'Edit', edit_invoice_service_path(invoice, service)
        %td= link_to 'Destroy', invoice_service_path(invoice, service), :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Service', new_invoice_service_path(invoice)
