= form_for [@textelement] do |f|
  - if @textelement.errors.any?
    #error_explanation
      %h2= "#{pluralize(@textelement.errors.count, "error")} prohibited this textelement from being saved:"
      %ul
        - @textelement.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :position
    = Position.render_dropdown("textelement", "position", f.object.position)
  .field
    = f.label :template_element_id
    = TemplateElement.render_dropdown("textelement", "template_element_id", f.object.template_element&.title)
  .field
    = f.label :page_id
    - Page.all.each do |page|
      %br
      = "#{page.title} (#{page.id})"
      - if f.object.page_ids.include? page.id
        = check_box "textelement", "page_ids", { multiple: true, checked: true }, page.id, nil
      - else
        = check_box "textelement", "page_ids", { multiple: true, checked: false }, page.id, nil

  .field
    = f.label :index
    = f.text_field :index
  .field
    = f.label :text
    = f.text_area :text, rows: 9, cols: 100, class: "edit_template"

  .actions
    = f.submit 'Save'
