= form_for [@picture] do |f|
  - if @picture.errors.any?
    #error_explanation
      %h2= "#{pluralize(@picture.errors.count, "error")} prohibited this picture from being saved:"
      %ul
        - @picture.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :position
    = Position.render_dropdown("picture", "position", f.object.position)
  .field
    = f.label :page_id
    - f.object.pages do |page|
      = "#{page.name} (#{page.id})"
  .field
    = f.label :image
    = f.file_field :image

    - if @picture.image?
      = image_tag(@picture.image.url, alt: 'Image')

      = label_tag :remove_image do
        Remove image
        = f.check_box :remove_image

  .actions
    = f.submit 'Save'
