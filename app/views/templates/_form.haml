= form_for @template do |f|
  - if @template.errors.any?
    #error_explanation
      %h2= "#{pluralize(@template.errors.count, "error")} prohibited this template from being saved:"
      %ul
        - @template.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :css
    = f.text_area :css, rows: 9, class: "edit_template"
  .field
    = f.label :html_begin
    = f.text_area :html_begin, rows: 9, class: "edit_template"
  .field
    = f.label :html_end
    = f.text_area :html_end, rows: 9, class: "edit_template"
  .actions
    = f.submit 'Save'
