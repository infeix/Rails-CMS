    %table
      %thead
        %tr
          %th Index
          %th Title
          %th Page
          %th
          %th
          %th

      %tbody
        - articles.each do |article|
          %tr
            %td.cell= article.index
            %td.cell= article.title
            %td.cell= article.page_id
            %td.cell= link_to 'Show', page_article_path(article.page_id, article), 'class': 'pure-button'
            %td.cell= link_to 'Edit', edit_page_article_path(article.page_id, article), 'class': 'pure-button'
            %td.cell= link_to 'Destroy', page_article_path(article.page_id, article), method: :delete, data: { :confirm => 'Are you sure?' }, 'class': 'pure-button'

    %br

