.pure-g
  - unless Page.editingPage
    .pure-u-1.messages
      %h1 Welche Seite willst du bearbeiten?
      .pure-u-1.pure-u-md-1-3
        .pages
          %table
            %thead
              %tr
                %th.cell ID
                %th.cell Title
                %th.cell Pfad
                %th.cell

            %tbody
              - pages.each do |page|
                - filtered_page = if page.edit_filter == 1 then "filtered-page" else "" end
                %tr{ class: filtered_page}
                  %td.cell= page.id
                  %td.cell= page.title
                  %td.cell= link_to page.url, page.url
                  %td.cell= link_to 'wÃ¤hlen', "/overviews?page_id=#{page.id}#cms", 'class': 'pure-button'
  - else
    - @page = Page.editingPage
    .pure-u-1.pure-u-md-1-3
      .pages
        %br
        %h1 Seite:
        %table
          %tbody
            - filtered_page = if page.edit_filter == 1 then "filtered-page" else "" end
            %tr{ class: filtered_page}
              %td.cell= page.title
              %td.cell= link_to page.url, page.url
              %td.cell= link_to 'andere Seite', "/overviews?page_id=nil#cms", 'class': 'pure-button'
      %br
      = form_for @page do |f|
        - if @page.errors.any?
          #error_explanation
            %h2= "#{pluralize(@page.errors.count, "error")} Es wurde das Speichern verhindert."
            %ul
              - @page.errors.full_messages.each do |msg|
                %li= msg

        .field
          = f.label :title
          = f.text_field :title, class: "page_title"
        .field
          = f.label :path
          = f.text_field :path, class: "page_path"
        .field
          = f.label :template_element_id
          = TemplateElement.render_dropdown("page", "template_element_id", f.object.template_element&.title)
        .actions
          = f.submit 'Save'


    %br
  - if current_user.is_admin?
    .pure-u-1.messages
      %h1 Nachrichten

      %table
        %thead
          %tr
            %th.cell.cell-big Time
            %th.cell.cell-big Msg
            %th.cell.cell-big Name
            %th.cell.cell-big Email
            %th.cell
            %th.cell
            %th.cell

        %tbody
          - messages.each do |message|
            %tr
              %td.cell.cell-important= message.created_at.strftime("%F %T")
              %td.cell.cell-important= message.msg
              %td.cell.cell-important= message.name
              %td.cell.cell-important= message.email
              %td.cell.cell-important= link_to 'Show', message, 'class': 'pure-button'
              %td.cell.cell-important= link_to 'Edit', edit_message_path(message), 'class': 'pure-button'
              %td.cell.cell-important= link_to 'Destroy', message, :method => :delete, :data => { :confirm => 'Are you sure?' }, 'class': 'pure-button'

      %br

    .pure-u-1.pure-u-md-1-3
      .pages
        %h1 Seiten

        %table
          %thead
            %tr
              %th.cell ID
              %th.cell Title
              %th.cell Path
              %th.cell
              %th.cell
              %th.cell
              %th.cell

          %tbody
            - pages.each do |page|
              - filtered_page = if page.edit_filter == 1 then "filtered-page" else "" end
              %tr{ class: filtered_page}
                %td.cell= page.id
                %td.cell= page.title
                %td.cell= link_to page.url, page.url
                %td.cell= link_to 'Filter', "/overviews?page_id=#{page.id}#cms", 'class': 'pure-button'
                %td.cell= link_to 'Show', page, 'class': 'pure-button'
                %td.cell= link_to 'Edit', edit_page_path(page), 'class': 'pure-button'
                %td.cell= link_to 'Destroy', page, method: :delete, data: { :confirm => 'Are you sure?' }, 'class': 'pure-button'

        %br

        = link_to 'Neue Seite', new_page_path, 'class': 'pure-button new-page-button'
        = link_to 'Reset Filter', "/overviews?page_id=nil#cms", 'class': 'pure-button'

      %br
      %br
