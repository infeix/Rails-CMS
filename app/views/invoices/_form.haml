= form_for @invoice do |f|
  - if @invoice.errors.any?
    #error_explanation
      %h2= "#{pluralize(@invoice.errors.count, "error")} prohibited this invoice from being saved:"
      %ul
        - @invoice.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :number
    = f.text_field :number
  .field
    = f.label :send_date
    = f.text_field :send_date
  .field
    = f.label :to_id
    = f.text_field :to_id
  .field
    = f.label :from_id
    = f.text_field :from_id
  .field
    = f.label :document_template_id
    = f.text_field :document_template_id
  .actions
    = f.submit 'Save'
