= form_for [@invoice, @service] do |f|
  - if @service.errors.any?
    #error_explanation
      %h2= "#{pluralize(@service.errors.count, "error")} prohibited this service from being saved:"
      %ul
        - @service.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :amount
    = f.number_field :amount
  .field
    = f.label :unit
    = f.text_field :unit
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :price_per_unit
    = f.text_field :price_per_unit
  .field
    = f.label :invoice_id
    = f.text_field :invoice_id
  .actions
    = f.submit 'Save'
