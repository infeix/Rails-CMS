= form_for @page do |f|
  - if @page.errors.any?
    #error_explanation
      %h2= "#{pluralize(@page.errors.count, "error")} prohibited this page from being saved:"
      %ul
        - @page.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title, class: "page_title"
  .field
    = f.label :path
    = f.text_field :path, class: "page_path"
  .field
    = f.label :template_element_id
    = f.text_field :template_element_id, class: "page_template_element_id"
  .field
    = f.label :edit_filter
    = f.text_field :edit_filter, class: "edit_filter"
  .field
    = f.label :text
    = f.text_area :text, rows: 9, class: "edit_template page_text"
  .actions
    = f.submit 'Save'
