= form_for @css_part do |f|
  - if @css_part.errors.any?
    #error_explanation
      %h2= "#{pluralize(@css_part.errors.count, "error")} prohibited this css_part from being saved:"
      %ul
        - @css_part.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :index
    = f.number_field :index
  .field
    = f.label :template_id
    = f.number_field :template_id
  .field
    = f.label :text
    = f.text_area :text
  .field
    = f.label :is_last
    = f.check_box :is_last
  .actions
    = f.submit 'Save'
